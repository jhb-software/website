---
import type { HeroSection } from 'cms/src/payload-types'
import SectionShell from './SectionShell.astro'
import Link from '../components/ui/Link.astro'

export type Props = HeroSection

const { title, subtitle, links } = Astro.props
---

<SectionShell class="flex flex-col items-center gap-4 pt-32">
  <h1 class="text-primary my-6 max-w-2xl text-balance text-center text-4xl font-extrabold">
    {title}
  </h1>
  <p class="my-2 max-w-2xl text-balance text-center">{subtitle}</p>
  <div class="flex max-w-2xl flex-row gap-4">
    {links?.map(({ link }) => <Link {...link} />)}
  </div>
</SectionShell>
