---
import { ogImageURL, siteName } from '@/constants'
import { globalState } from '@/globalState'
import { SITE_URL } from 'astro:env/client'
import type { Article, Author, Page, Project, SeoMetadata } from 'cms/src/payload-types'

type Props = {
  meta: SeoMetadata
  page?: Page | Project | Article | Author
}

const { meta, page } = Astro.props
const { locale } = globalState

const canonicalUrl = new URL(Astro.url.pathname, SITE_URL)

const ogImageUrl =
  page && 'image' in page && typeof page.image === 'object' && page.image.url
    ? page.image.url
    : ogImageURL(locale)
---

<title>{meta.title}</title>
<meta name="description" content={meta.description} />

<link rel="canonical" href={canonicalUrl} />

{
  meta.alternatePaths.map((alternatePath) => (
    <link
      rel="alternate"
      href={`${SITE_URL}${alternatePath.path}`}
      hreflang={alternatePath.hreflang}
    />
  ))
}

<!-- Open Graph Website related -->
<meta property="og:site_name" content={siteName} />

<!-- Open Graph Page related -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={meta.title} />
<meta property="og:description" content={meta.description} />
<meta property="og:locale" content={locale} />
<meta property="og:image" content={ogImageUrl} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalUrl} />
<meta property="twitter:title" content={meta.title} />
<meta property="twitter:description" content={meta.description} />
<meta property="twitter:image" content={ogImageUrl} />
