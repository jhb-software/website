---
import RichTextLexical from '../RichTextLexical.astro'
import type { ListNode } from '../types'

type Props = { node: ListNode }

const { node } = Astro.props
---

{
  () => {
    switch (node.tag) {
      case 'ol':
        return <ol>{<RichTextLexical nodes={node.children ?? []} />}</ol>
      case 'ul':
        return <ul>{<RichTextLexical nodes={node.children ?? []} />}</ul>
    }
  }
}
