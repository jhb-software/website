---
import Img from '@/components/Img.astro'
import type { AboutBlock } from 'cms/src/payload-types'
import RichTextBlock from './RichTextBlock/RichTextBlock.astro'

export type Props = AboutBlock

const { title, name, text, image } = Astro.props
---

<div class="my-16">
  <div class="flex flex-col items-start gap-8 md:flex-row">
    <div class="w-full md:w-1/3">
      <div class="flex flex-col items-center gap-4">
        {
          typeof image === 'object' && (
            <Img image={image} size="md" class="w-full rounded-lg shadow-lg" />
          )
        }
      </div>
    </div>

    <div class="w-full space-y-4 md:w-2/3">
      <h3 class="flex items-center gap-2">
        <span class="text-md text-slate-500">{title}</span>
        <span class="text-lg font-semibold">{name}</span>
      </h3>

      <RichTextBlock text={text} />
    </div>
  </div>
</div>
