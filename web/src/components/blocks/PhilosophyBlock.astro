---
import type { PhilosophyBlock } from 'cms/src/payload-types'
import Card from '../cards/Card.astro'
import RichTextBlock from './RichTextBlock/RichTextBlock.astro'

export type Props = PhilosophyBlock

const { title, text, items } = Astro.props
---

<div class="my-16">
  <div class="flex flex-col gap-8 lg:flex-row">
    <div class="w-full space-y-6 lg:w-1/3">
      <h3 class="text-lg font-bold">{title}</h3>

      <RichTextBlock text={text} />
    </div>

    <div class="w-full space-y-4 lg:w-2/3">
      {
        items.map((item) => (
          <Card>
            <h3 class="text-md mb-2 font-semibold">{item.title}</h3>
            <p>{item.text}</p>
          </Card>
        ))
      }
    </div>
  </div>
</div>
