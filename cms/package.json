{
  "name": "cms",
  "version": "1.0.0",
  "description": "The CMS for the jhb.software Website built on top of Payload",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "format": "prettier --write src"
  },
  "dependencies": {
    "@jhb.software/payload-alt-text-plugin": "^0.2.1",
    "@jhb.software/payload-admin-search": "^0.1.2",
    "@jhb.software/payload-pages-plugin": "0.6.0-beta.2",
    "@jhb.software/payload-seo-plugin": "^0.1.4",
    "@joneslloyd/payload-storage-hetzner": "github:jhb-dev/hetzner-object-storage#3b64d06e136409df45eb70b9b350aa1649ec7f79",
    "@payload-enchants/translator": "workspace:*",
    "@payloadcms/db-mongodb": "3.62.0",
    "@payloadcms/email-resend": "3.62.0",
    "@payloadcms/next": "3.62.0",
    "@payloadcms/plugin-cloud-storage": "3.62.0",
    "@payloadcms/plugin-search": "3.62.0",
    "@payloadcms/plugin-seo": "3.62.0",
    "@payloadcms/richtext-lexical": "3.62.0",
    "@payloadcms/storage-s3": "3.62.0",
    "@payloadcms/translations": "3.62.0",
    "@payloadcms/ui": "3.62.0",
    "@tailwindcss/postcss": "^4.1.16",
    "cross-env": "^10.1.0",
    "graphql": "^16.11.0",
    "next": "15.5.6",
    "openai": "^6.7.0",
    "p-map": "^7.0.3",
    "payload": "3.62.0",
    "postcss": "^8.5.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.16",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "^24.9.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "eslint": "^9.38.0",
    "eslint-config-next": "16.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0"
  }
}
